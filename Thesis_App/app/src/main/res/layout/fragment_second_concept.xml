<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ks_pem01.thesis_app.SecondConceptFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Daily goal:"
        android:textSize="8pt"
        android:layout_marginTop="10px"
        android:layout_gravity="top"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="2,6l"
        android:textSize="18pt"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="top"
        android:layout_marginTop="40px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="You drank already:"
        android:textSize="8pt"
        android:layout_marginTop="10px"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="18pt"
        android:id="@+id/actualStatus"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="right"
        android:layout_marginTop="40px"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/containerView" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="543px"
        android:minWidth="388pt"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/concept_two"
        android:src="@drawable/concept_two" />



    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimaryDark"
        fab:menu_colorRipple="@color/colorPrimaryLight"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_amount_500"
            style="@style/MenuButtonsSmall"
            fab:fab_size="mini"
            fab:fab_label="500 ml" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_amount_250"
            style="@style/MenuButtonsSmall"
            fab:fab_size="mini"
            fab:fab_label="250 ml" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_amount_100"
            style="@style/MenuButtonsSmall"
            fab:fab_size="mini"
            fab:fab_label="100 ml" />

    </com.github.clans.fab.FloatingActionMenu>



</FrameLayout>
